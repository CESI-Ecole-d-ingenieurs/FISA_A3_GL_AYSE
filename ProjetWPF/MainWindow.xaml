<Window x:Class="ProjetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" Height="1080" Width="1920" Background="Pink"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="EasySave" FontSize="100" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Grid.Column="1"/>

        <Button Name="Exit_b" Content="Quitter" Width="150" Height="50" Background="Lavender" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Click="Exit" Grid.Column="1"/>
        <Button Name="Settings_b" Content="Paramétrage" Width="150" Height="50" Background="Lavender" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Click="ShowSettings" Grid.Column="1"/>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,30,0,0" Grid.Column="1" Grid.Row="1">
            <Button Name="Language_b" Content="Langue / language" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowLanguages"/>
            <Button Name="Create_b" Content="Créer une sauvegarde" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowCreation"/>
            <Button Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowExecution" >
                <TextBlock Name="Execute_b" Text="Exécuter une / plusieurs sauvegardes" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button Name="Consult_b" Content="Consulter l’historique" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowLogs"/>
        </StackPanel>

        <Grid  Name="Settings" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,150,100,0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Name="Format" Text="Format de l’historique :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <ComboBox Name="Format_list" Width="400" Height="50" FontSize="20" Background="White" Margin="0, 10, 0, 50">
                </ComboBox>
                <TextBlock Name="Crypt" Text="Fichiers à crypter :" FontSize="20" FontWeight="Bold" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="FileEncryptTextBox" Width="400" Height="50" Margin="0, 10, 0, 50"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10, 0, 0, 0">
                <TextBlock Name="Software" Text="Logiciels métiers :" FontSize="20" FontWeight="Bold" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="BusinessSoftwareTextBox" Width="400" Height="50" Margin="0, 10, 0, 50"/>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0" Click="SettingsChange"/>
            </StackPanel>
        </Grid>

        <StackPanel Name="Languages" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,150,100,0" Visibility="Collapsed">
            <TextBlock Text="Choisissez une langue / Choose a language :" FontSize="20" FontWeight="Bold" Width="500" TextAlignment="Center" Background="Lavender" Padding="30"/>
            <ComboBox Name="Language" Width="500" Height="30" Background="White" Margin="0, 10, 0, 50">
            </ComboBox>
            <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0" Click="LanguageChange"/>
        </StackPanel>

        <Grid Name="Creation" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Name="Name" Text="Nom :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Name_t" Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
                <TextBlock Name="Source" Text="Source :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Source_t" Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
                <TextBlock Name="Destination" Text="Destination :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Destination_t" Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10, 0, 0, 0">
                <TextBlock Name="Type" Text="Type :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <ComboBox Name="Type_t" Width="400" Height="50" Background="White" Margin="0, 10, 0, 30">
                    <ComboBoxItem Name="Complete" Content="Complète"/>
                    <ComboBoxItem Name="Differential" Content="Différentielle"/>
                </ComboBox>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0" Click="BackupCreation"/>
            </StackPanel>
        </Grid>

        <Grid Name="Execution" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Name="Available" Text="Sauvegardes disponibles :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Available_t" Text="" Width="400" Height="300" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 30"/>
                <TextBlock Name="ToDo" Text="Sauvegardes à effectuer :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10, 0, 0, 0">
                <TextBlock Name="State" Text="Etat en temps réel :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="300" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 30"/>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0" Click="BackupExecution"/>
            </StackPanel>
        </Grid>

        <StackPanel Name="Logs" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <TextBlock Name="History" Text="Historique :" FontSize="20" FontWeight="Bold" Width="500" TextAlignment="Center" Background="Lavender" Padding="30"/>
            <TextBox Text="" Width="800" Height="500" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>