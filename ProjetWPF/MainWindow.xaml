<Window x:Class="ProjetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" Height="1080" Width="1920" Background="Pink"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="EasySave" FontSize="100" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Grid.Column="1"/>

        <Button Content="Quitter" Width="150" Height="50" Background="Lavender" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Click="Exit" Grid.Column="1"/>
        <Button Content="Paramétrage" Width="150" Height="50" Background="Lavender" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Click="ShowSettings" Grid.Column="1"/>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,30,0,0" Grid.Column="1" Grid.Row="1">
            <Button Content="Langue / language" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowLanguages"/>
            <Button Content="Créer une sauvegarde" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowCreation"/>
            <Button Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowExecution" >
                <TextBlock Text="Exécuter une / plusieurs sauvegardes" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button Content="Consulter l’historique" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowLogs"/>
        </StackPanel>

        <Grid  x:Name="Settings" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,150,100,0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Text="Format de l’historique :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <ComboBox Width="400" Height="50" FontSize="20" Background="White" Margin="0, 10, 0, 50">
                    <ComboBoxItem Content="JSON"/>
                    <ComboBoxItem Content="XML"/>
                </ComboBox>
                <TextBlock Text="Fichiers à crypter :" FontSize="20" FontWeight="Bold" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox x:Name="FileEncryptTextBox" Width="400" Height="50" Margin="0, 10, 0, 50"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10, 0, 0, 0">
                <TextBlock Text="Logiciels métiers :" FontSize="20" FontWeight="Bold" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox x:Name="BusinessSoftwareTextBox" Width="400" Height="50" Margin="0, 10, 0, 50"/>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0"/>
            </StackPanel>
        </Grid>

        <StackPanel x:Name="Languages" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,150,100,0" Visibility="Collapsed">
            <TextBlock Text="Choisissez une langue / Choose a language :" FontSize="20" FontWeight="Bold" Width="500" TextAlignment="Center" Background="Lavender" Padding="30"/>
            <ComboBox Name="Language" Width="500" Height="30" Background="White" Margin="0, 10, 0, 50">
                <ComboBoxItem Content="Français"/>
                <ComboBoxItem Content="English"/>
            </ComboBox>
            <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0"/>
        </StackPanel>

        <Grid x:Name="Creation" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Text="Nom :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
                <TextBlock Text="Source :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
                <TextBlock Text="Destination :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10, 0, 0, 0">
                <TextBlock Text="Type :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <ComboBox Width="400" Height="50" Background="White" Margin="0, 10, 0, 30">
                    <ComboBoxItem Content="Complète"/>
                    <ComboBoxItem Content="Différentielle"/>
                </ComboBox>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0"/>
            </StackPanel>
        </Grid>

        <Grid x:Name="Execution" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Text="Sauvegardes disponibles :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="300" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 30"/>
                <TextBlock Text="Sauvegardes à effectuer :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10, 0, 0, 0">
                <TextBlock Text="Etat en temps réel :" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Text="" Width="400" Height="300" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 30"/>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0"/>
            </StackPanel>
        </Grid>

        <StackPanel x:Name="Logs" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <TextBlock Text="Historique :" FontSize="20" FontWeight="Bold" Width="500" TextAlignment="Center" Background="Lavender" Padding="30"/>
            <TextBox Text="" Width="800" Height="500" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 0"/>
        </StackPanel>
    </Grid>
</Window>