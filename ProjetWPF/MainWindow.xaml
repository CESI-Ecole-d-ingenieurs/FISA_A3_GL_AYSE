<Window x:Class="ProjetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave" Height="1080" Width="1920" Background="Pink"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="EasySave" FontSize="100" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Grid.Column="1"/>

        <Button Name="Exit_b" Content="Exit" Width="150" Height="50" Background="Lavender" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Click="Exit" Grid.Column="1"/>
        <Button Name="Settings_b" Content="Setting" Width="150" Height="50" Background="Lavender" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Click="ShowSettings" Grid.Column="1"/>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,30,0,0" Grid.Column="1" Grid.Row="1">
            <Button Name="Language_b" Content="Langue / language" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowLanguages"/>
            <Button Name="Create_b" Content="Backup creation" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowCreation"/>
            <Button Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowExecution" >
                <TextBlock Name="Execute_b" Text="Execute one / several backups" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <Button Name="Consult_b" Content="Consult the hystory" Width="300" Height="100" Background="Lavender" FontSize="20" Margin="5,15,5,15" Click="ShowLogs"/>
        </StackPanel>

        <Grid  Name="Settings" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,150,100,0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Name="Format" Text="History format:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <ComboBox Name="Format_list" Width="400" Height="50" FontSize="20" Background="White" Margin="0, 10, 0, 50">
                </ComboBox>
                <TextBlock Name="Crypt" Text="Files to encrypt:" FontSize="20" FontWeight="Bold" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="FileEncryptTextBox" Width="400" Height="50" Margin="0, 10, 0, 50"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10, 0, 0, 0">
                <TextBlock Name="Software" Text="Business software:" FontSize="20" FontWeight="Bold" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="BusinessSoftwareTextBox" Width="400" Height="50" Margin="0, 10, 0, 50"/>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0" Click="SettingsChange"/>
            </StackPanel>
            <TextBlock Name="Settings_OK" Text="" FontSize="20" FontWeight="Normal" TextAlignment="Center" Background="Pink" Padding="30" Margin="0,396,0,-98" Grid.ColumnSpan="2"/>
        </Grid>

        <Grid Name="Languages" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,150,100,0" Visibility="Collapsed">
            <TextBlock Text="Choisissez une langue / Choose a language :" FontSize="20" FontWeight="Bold" Width="500" TextAlignment="Center" Background="Lavender" Padding="30" Margin="0,0,0,293"/>
            <ComboBox Name="Language" Width="500" Height="30" Background="White" Margin="0,92,0,252">
            </ComboBox>
            <TextBlock x:Name="Language_OK" Text="" FontSize="20" FontWeight="Normal" TextAlignment="Center" Background="Pink" Padding="30" RenderTransformOrigin="0.484,-0.632" Margin="0,274,0,0"/>
            <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="100,151,100,123" Click="LanguageChange"/>
        </Grid>

        <Grid Name="Creation" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Name="Name" Text="Name:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Name_t" Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
                <TextBlock Name="Source" Text="Source:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Source_t" Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
                <TextBlock Name="Destination" Text="Destination:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Destination_t" Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10, 0, 0, 0">
                <TextBlock Name="Type" Text="Type:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <ComboBox Name="Type_t" Width="400" Height="50" Background="White" Margin="0, 10, 0, 30">
                    <ComboBoxItem Name="Complete" Content="Complete"/>
                    <ComboBoxItem Name="Differential" Content="Differential"/>
                </ComboBox>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0" Click="BackupCreation"/>
            </StackPanel>
            <TextBlock Name="Creation_OK" Text="" FontSize="20" FontWeight="Normal" TextAlignment="Center" Background="Pink" Padding="30" Margin="0,535,0,-96" Grid.ColumnSpan="2"/>
        </Grid>

        <Grid Name="Execution" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Name="Available" Text="Available backups:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="Available_t" Text="" Width="400" Height="300" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 30"/>
                <TextBlock Name="ToDo" Text="Backups to do:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="ToDo_t" Text="" Width="400" Height="50" Margin="0, 10, 0, 30"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Margin="10, 0, 0, 0">
                <TextBlock Name="State" Text="Real-time state:" FontSize="20" FontWeight="Bold" Width="400" TextAlignment="Center" Background="Lavender" Padding="30"/>
                <TextBox Name="State_t" Text="" Width="400" Height="300" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 10, 0, 30"/>
                <Button Content="OK" Width="300" Height="100" FontSize="20" Background="Lavender" Margin="0, 0, 0, 0" Click="BackupExecution"/>
            </StackPanel>
        </Grid>

        <Grid Name="Logs" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 150, 100, 0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="0, 0, 10, 0">
                <TextBlock Name="History" Text="History:" FontSize="20" FontWeight="Bold" Width="500" Height="80" TextAlignment="Center" Background="Lavender" Padding="30" Margin="0,0,0,30"/>
                <TextBox Name="History_t" Text="" Width="800" Height="500" Background="Lavender" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" Margin="0, 0, 0, 0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>